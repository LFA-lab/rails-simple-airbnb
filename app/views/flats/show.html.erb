<!-- app/views/flats/show.html.erb -->
<div class="container mt-4">
  <!-- Titre du flat et adresse -->
  <h1><%= @flat.name %></h1>
  <p class="text-muted"><%= @flat.address %></p>

  <div class="row mt-4">
    <!-- Section de gauche : Image, Description, Détails -->
    <div class="col-md-8">
      <%# Image du flat (URL stockée dans l'attribut picture_url si disponible) %>
      <img src="<%= @flat.picture_url %>" class="img-fluid" alt="<%= @flat.name %>">

      <!-- Description du flat -->
      <div class="mt-4">
        <h2>A bit more about this flat...</h2>
        <p><%= @flat.description %></p>
      </div>

      <!-- Détails : nombre de personnes et prix par nuit -->
      <div class="mt-4">
        <h3>Details</h3>
        <p>
          <i class="fas fa-user"></i> <%= @flat.number_of_guests %> guests
          <i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %> per night
        </p>
      </div>
    </div>

    <!-- Section de droite : formulaire de réservation et options de partage -->
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5>Book this place!</h5>
          <form>
            <div class="mb-3">
              <label for="from" class="form-label">From:</label>
              <input type="date" class="form-control" id="from">
            </div>
            <div class="mb-3">
              <label for="to" class="form-label">To:</label>
              <input type="date" class="form-control" id="to">
            </div>
            <button type="submit" class="btn btn-success w-100">Book</button>
          </form>
        </div>
      </div>

      <!-- Section de partage -->
      <h5 class="mt-4">Share</h5>
      <i class="fab fa-facebook fa-2x"></i>
      <i class="fab fa-twitter fa-2x"></i>
      <i class="fab fa-pinterest fa-2x"></i>
    </div>
  </div>

  <!-- Lien de retour à la liste des flats -->
  <%= link_to 'Back to all flats', flats_path, class: "btn btn-secondary mt-4" %>
</div>
